@using MvcCv.Models.Entity;
@model List<TblAdmin>

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Kayıt Ol - Admin Paneli</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/login-form-20/css/style.css">
</head>
<body class="img js-fullheight" style="background-image: url(/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Admin Kayıt Paneli</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Yeni Hesap Oluştur</h3>
                        @if (ViewBag.Uyari != null)
                        {
                            <div class="alert alert-warning text-center" role="alert">
                                <i class="fa fa-clock-o mr-2"></i> @ViewBag.Uyari
                            </div>
                        }
                        <form method="post" class="signin-form">
                            <div class="form-group">
                                <input type="text" class="form-control" name="KullaniciAdi" placeholder="Define Username" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" class="form-control" name="Sifre" placeholder="Define Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <input type="text" name="WebsiteUrl" style="display:none;" tabindex="-1" autocomplete="off">
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Kayıt Ol</button>
                            </div>
                        </form>

                        <div class="social d-flex text-center mt-4">
                            <a href="/Login/Index" class="px-2 py-2 mr-md-1 rounded w-100 btn btn-outline-light">
                                <span class="fa fa-arrow-left mr-2"></span> Giriş Ekranına Dön
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/login-form-20/js/jquery.min.js"></script>
    <script src="/login-form-20/js/popper.js"></script>
    <script src="/login-form-20/js/bootstrap.min.js"></script>
    <script src="/login-form-20/js/main.js"></script>
</body>
</html>