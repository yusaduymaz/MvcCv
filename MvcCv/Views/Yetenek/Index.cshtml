@using MvcCv.Models.Entity;
@model List<TblYeteneklerim>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string renk = "";}
@{string labelrenk = "";}




<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title"style="font-size:36px;font-family:Dubai">Yetenek Listesi</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th>Oran</th>
                                            <th>Duzenle</th>
                                            <th>Sil</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            if (x.Oran >= 90)
                                            {
                                                renk = "progress-bar bg-success";
                                                labelrenk = "badge bg-success";
                                            }
                                            else if (x.Oran >= 75 && x.Oran < 90)
                                            {
                                                renk = "progress-bar bg-primary";
                                                labelrenk = "badge bg-primary";
                                            }
                                            else if (x.Oran >= 50 && x.Oran < 75)
                                            {
                                                renk = "progress-bar bg-warning";
                                                labelrenk = "badge bg-warning";
                                            }
                                            else
                                            {
                                                renk = "progress-bar bg-danger";
                                                labelrenk = "badge bg-danger";
                                            }
                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Yetenek</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width:@x.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelrenk">@x.Oran%</span></td>
                                                <td>
                                                    <a href="/Yetenek/YetenekGetir/@x.ID" class="btn btn-info btn-sm">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Duzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/Yetenek/YetenekSil/@x.ID" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash-alt"></i>
                                                        Sil
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <a href="/Yetenek/YetenekEkle"><button accesskey="" class="btn btn-success">Yeni Yetenek Ekle</button></a>
                    </div>
                </div>
            </div>
        </section>

    </div>
</body>
</html>